<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation">

        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ViewFlipper
                android:id="@+id/viewFlipper"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:inAnimation="@anim/slide_in"
                android:outAnimation="@anim/slide_out">

                <RelativeLayout
                    android:id="@id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/photo3" />

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="26dp"
                        android:background="#80000000"
                        android:fontFamily="sans-serif-light"
                        android:paddingStart="8dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="4dp"
                        android:text="Share your knowlage about level design"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/photo2" />

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="#80000000"
                        android:fontFamily="sans-serif-light"
                        android:paddingStart="8dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="4dp"
                        android:text="Discuss about programming"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/photo1" />

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="20dp"
                        android:background="#80000000"
                        android:fontFamily="sans-serif-light"
                        android:paddingStart="8dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="4dp"
                        android:text="Discuss with developers"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                </RelativeLayout>

            </ViewFlipper>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewFlipper"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:alignmentMode="alignMargins"
                    android:columnCount="3"
                    android:columnOrderPreserved="false"
                    android:rowCount="2"
                    android:useDefaultMargins="true">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button1"
                        style="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_buttons"
                        android:drawableTop="@drawable/chat_neon"
                        android:drawablePadding="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:padding="5dp"
                        android:text="Chat"
                        android:textSize="17dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button2"
                        style="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_buttons"
                        android:drawableTop="@drawable/artworks"
                        android:drawablePadding="10dp"
                        android:padding="5dp"
                        android:text="artworks"
                        android:textSize="17dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button3"
                        style="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_buttons"
                        android:drawableTop="@drawable/note"
                        android:drawablePadding="10dp"
                        android:padding="5dp"
                        android:text="Notepad"
                        android:textSize="17dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button4"
                        style="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_buttons"
                        android:drawableTop="@drawable/command_neon"
                        android:drawablePadding="10dp"
                        android:padding="5dp"
                        android:text="Command"
                        android:textSize="17dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button5"
                        style="Favorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_buttons"
                        android:drawableTop="@drawable/favorite_neon"
                        android:drawablePadding="10dp"
                        android:padding="5dp"
                        android:text="Notepad"
                        android:textSize="17dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button6"
                        style="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_buttons"
                        android:drawableTop="@drawable/events_neon"
                        android:drawablePadding="10dp"
                        android:padding="5dp"
                        android:text="Events"
                        android:textSize="17dp" />
                </GridLayout>
            </FrameLayout>

        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemIconSize="35dp"
        app:itemTextColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@color/colorBottomNavBar"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>